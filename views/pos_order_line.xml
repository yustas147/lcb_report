<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="rep_pos_order_line_tree">
            <field name="name">rep.pos.order.line.tree</field>
            <field name="model">pos.order.line</field>
            <field name="sequence">20</field>
            <field name="arch" type="xml">
                <tree default_order="sale_date desc" create="false" edit="false">
                    <field name="license_number" />
                    <field name="pack_lot_ids" string="Unique 16-digit ID"/>
                    <field name="sale_date" />
                    <field name="qty" string="Quantity sold"/>
                    <field name="pp" string="Total price" />
                    <field name="tax_amount" />
                    <field name="is_medical" />
                </tree>
            </field>
        </record>
        
         <record model="ir.ui.view" id="rep_pos_order_line_form">
            <field name="name">rep.pos.order.line.form</field>
            <field name="model">pos.order.line</field>
            <field name="sequence">20</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <field name="license_number" />
                </form>
            </field>
        </record>
        
         <record id="act_pos_order_line_id" model="ir.actions.act_window">
            <field name="name">Pos Sales</field>
            <field name="res_model">pos.order.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="rep_pos_order_line_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create Pos Sales Report for Retailer
                </p>
            </field>
        </record>
        
        <menuitem action="act_pos_order_line_id" id="menu_rep_retail_pos_sales_id" name="Retail POS Sales" parent="menu_report_retailer_id" sequence="20"/>

   </data>
</openerp>
