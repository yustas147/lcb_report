<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="product_normal_form_view_lcb" model="ir.ui.view">
            <field name="name">product.product.form.lcb</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="lot_ids">
                        <tree>
                            <field name='name'/>
                        </tree>
                    </field>
                    <!--<field name="lot_ids"/>-->
                </xpath>
            </field>
        </record>
        
        <record id="view_lcb_product_product_search" model="ir.ui.view">
            <field name="name">lcb.product.search</field>
            <field name="model">product.product</field>
             <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                                <search position="inside">
                                        <search>
                                                <field name="barcode" string="Barcode" filter_domain="[('barcode','ilike',self)]"/>
                                        </search>
                                </search>
            </field>
        </record>
   </data>
</openerp>
